<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Complaint_fragment"
    tools:context="dynamicdrillers.sagy.ComplaintFragment">

    <!-- TODO: Update blank fragment layout -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<TextView
    android:id="@+id/complainttext"
    android:layout_width="330dp"
    android:layout_height="50sp"
    android:paddingTop="8sp"
    android:text="Send Us Your Complaint"
    android:background="@drawable/round_text"
    android:textStyle="bold"
    android:textSize="23sp"
    android:textAlignment="center"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="20dp"
    android:textColor="@color/colorPrimary"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edittextname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="*Name"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edittextemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Email(Optional)"/>

</android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edittextpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:inputType="phone"
            android:hint="*Phone"/>

    </android.support.design.widget.TextInputLayout>

    <EditText
        android:id="@+id/edittextcomplaint"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="10dp"
        android:background="@drawable/complaint_box"
        android:hint="Complaint here..."/>
    <Button
        android:id="@+id/send"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:text="send"
        android:textStyle="bold"
        android:textColor="#fff"
        android:background="@drawable/complaint_button"/>

</LinearLayout>


</FrameLayout>
