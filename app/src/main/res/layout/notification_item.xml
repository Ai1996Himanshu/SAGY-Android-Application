<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/notification_card_view"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:elevation="50dp"
        app:cardCornerRadius="10dp"
        android:background="#000">
        <TextView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="X"
            android:layout_margin="5dp"
            android:textColor="#000"
            android:layout_gravity="right"/>
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:background="@drawable/ic_notifications_none_black_24dp"/>
        <LinearLayout
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/notification_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#00008b"
                android:textStyle="bold"
                android:textSize="25sp"
                android:text="Notification Title Here.."
                />
            <TextView
                android:id="@+id/notification_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="Lorem Ipsum's origins extend far back to a scrambled Here.."
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>